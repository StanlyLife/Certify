@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Update";
}
@model IEnumerable<CertificationsModel>

<link href="~/css/ListCertifications.css" rel="stylesheet" />
<link href="~/css/ListEditCertifications.css" rel="stylesheet" />
	<div class="header">


		<h1>Update</h1>
		<h5>
			USER: @ViewData["Function"]
		</h5>
		@if (TempData["Message"] != null) {
			<div class="alert alert-dark d-flex justify-content-center">@TempData["Message"].ToString()</div>
		}
	</div>

<div class="TableWrapper">
<table class="table">

	<thead id="TableDefiner">
		<tr id="TableRowDefiner">
			<th id="CertNameDefiner">Certification</th>
			<th id="CertSubject">Subject</th>
			<th id="CertSite">Site</th>
			<th id="CertAuthor">Id</th>
			<th id="CertView">Edit/Delete/View</th>
		</tr>
	</thead>

	@foreach (var x in Model) {
		<tr>
			<td>@x.CertName</td>
			<td>@x.CertSubject</td>
			<td>@x.CertSite</td>
			<td>@x.Id</td>

			<td>
				<a asp-controller="Create" asp-action="UpdateCertifications" asp-route-id="@x.Id" name="Edit">
					<img src="~/web-page.png" />
				</a>
				<a asp-controller="Create" asp-action="DeleteCertification" asp-route-id="@x.Id" name="Delete">
					<img src="~/dot.png" />
				</a>
				<a asp-controller="Certifications" asp-action="Details" asp-route-id="@x.Id" name="View">
					<img src="~/play-button.png" />
				</a>
			</td>
		</tr>
	}
</table>
</div>
