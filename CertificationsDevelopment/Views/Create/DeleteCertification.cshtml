@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Delete";
}
@model CertificationsModel
<link href="~/css/DeleteCertification.css" rel="stylesheet" />
<div class="DeleteWrapper">
	<div class="DeleteHeader">

		<h1>Delete '@Model.CertName'</h1>
	</div>


<table class="DeleteTable">
	<tr>
		<td>Certification: @Model.CertName</td>
	</tr>
	<tr>
		<td>Id: @Model.Id</td>
	</tr>
	<tr>
		<td>Posted: @Model.Posted</td>
	</tr>
	<tr>
		<td>
			<form method="post" asp-action="DeleteCertificationPost" asp-route-id="@Model.Id">
				<button class="myButton" type="submit">
					DELETE
				</button>
			</form>
		</td>
	</tr>
</table>
	</div>
