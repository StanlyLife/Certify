<body>
	<header>
		<nav>
				<div class="navbar">
					<ul>
						<li class="navitem">
							<a alt="Go to home" asp-area="" asp-controller="home" asp-action="Index">
								<img src="~/Images/C.png" alt="Error loading image"/>
							</a>
						</li>
						<li class="navitem">
							<a asp-area="" asp-controller="Certifications" asp-action="Index">Certificates</a>
						</li>
						<li class="navitem">
							<a  asp-area="" asp-controller="Home" asp-action="Privacy">About</a>
						</li>
						@if(User.Identity.IsAuthenticated) {

						<li class="navitem">
							<a  asp-area="" asp-controller="Create" asp-action="CreateCertifications">Add Certificate</a>
						</li>
						<li class="navitem">
							<a asp-area="" asp-controller="Create" asp-action="ListEditCertifications">Update Certificate</a>
						</li>

						}
						 <partial name="_LoginPartial" />
					</ul>
				</div>
		</nav>
	</header>
	<div class="container">
		<main role="main">
			@RenderBody()
		</main>
	</div>
	@RenderSection("Scripts", required: false)
	<div class="Footer">
		<div class="LayoutFooter">

			<div class="FooterContainer">
